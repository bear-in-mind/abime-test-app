<%= simple_form_for @team, html: {data: { controller: "nested-form" }} do |f| %>
  <%= f.input :name, label: "Team name" %>
    <h1>Players</h1>
    <template data-target="nested-form.template">
        <%= f.simple_fields_for Player.new, child_index: 'NEW_RECORD' do |pl| %>
          <%= render 'shared/player_fields', f: pl %>
        <% end %>
    </template>
    <div class="associations" data-target="nested-form.associations">
      <%= f.simple_fields_for :players do |pl| %>
        <%= render 'shared/player_fields', f: pl %>
      <% end %>
    </div>
  <div class="m-6" data-target="nested-form.links">
    <%= link_to "Add Task", "#", class: "btn btn-green", data: { action: "click->nested-form#add_association" } %>
  </div>
  <%= f.submit class: "mt-3 btn btn-blue" %>
<% end %>
