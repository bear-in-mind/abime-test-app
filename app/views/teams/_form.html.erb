<%= simple_form_for @team do |f| %>
  <%= f.input :name, label: "Team name" %>
  <div data-controller="nested-form">
    <template data-target="nested-form.template">
        <%= f.simple_fields_for Player.new, child_index: 'NEW_RECORD' do |pl| %>
          <%#= render 'shared/player_fields', f: pl %>
        <% end %>
    </template>
  </div>
  <%= f.simple_fields_for :players do |pl| %>
    <%= render 'shared/player_fields', f: pl %>
  <% end %>
  <div class="mb-3" data-target="nested-form.links">
    <%= link_to "Add Task", "#", class: "btn btn-outline-primary", data: { action: "click->nested-form#add_association" } %>
  </div>
  <%= f.submit class: "mt-3" %>
<% end %>
